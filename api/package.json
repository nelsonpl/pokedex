{
  "name": "pokedex-api",
  "version": "0.0.1",
  "description": "REST API for Pokedex.",
  "license": "ISC",
  "author": {
    "name": "Jitterbit, Inc."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jitterbit/pokedex.git",
    "directory": "api/"
  },
  "scripts": {
    "start": "nest start --prod",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "axios": "^1.7.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.1",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "nock": "^13.5.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}